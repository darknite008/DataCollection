<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateDelete">

    <EditText
        android:id="@+id/txtsearch"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:layout_margin="10dp"
        android:hint="Search ID"
        android:drawableLeft="@drawable/ic_search"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_se_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/roundedbutton"
        android:textColorHint="@android:color/white"
        android:hint="Search" />

    <EditText
        android:id="@+id/up_name"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_perm_name"
        android:hint="Enter Name" />

    <EditText
        android:id="@+id/up_salary"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_attach_money"
        android:hint="Enter Salary"
        android:inputType="number" />

    <EditText
        android:id="@+id/up_age"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:layout_margin="10dp"
        android:hint="Enter Age"
        android:drawableLeft="@drawable/ic_child_age"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Update"
        android:background="@drawable/roundedbutton"
        android:textColorHint="@android:color/white"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Delete"
        android:background="@drawable/roundedbutton"
        android:textColorHint="@android:color/white"
        android:textAllCaps="false" />
</LinearLayout>