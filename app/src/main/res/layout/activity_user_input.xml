<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInput">

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_perm_name"
        android:hint="Enter Name" />

    <EditText
        android:id="@+id/etsalary"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_attach_money"
        android:layout_margin="10dp"
        android:hint="Enter Salary" />

    <EditText
        android:id="@+id/etage"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/texfile_rounded"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_child_age"
        android:layout_margin="10dp"
        android:hint="Enter Age" />
    <Button
        android:id="@+id/btnregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert User"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundedbutton"
        android:textColorHint="@android:color/white"
        android:textAllCaps="false"/>


</LinearLayout>